                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ShowResult" /> @Html.DisplayNameFor(model => model.ShowResult)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ShuffleQuestions" /> @Html.DisplayNameFor(model => model.ShuffleQuestions)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
